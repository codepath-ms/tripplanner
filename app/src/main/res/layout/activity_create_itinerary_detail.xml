<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.codepathms.cp.tripplannerapp.activities.CreateItineraryDetailActivity">

    <FrameLayout
        android:id="@+id/flCreateHeaderContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"></FrameLayout>

    <FrameLayout
        android:id="@+id/flCreateTimelineContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/flCreateHeaderContainer"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">
    </FrameLayout>

</RelativeLayout>
