<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    android:background="@color/background_tab_pressed"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tvItineraryDetailTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ItineraryTitle" />

    <TextView
        android:id="@+id/tvItineraryDetailDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/tvItineraryDetailTitle"
        android:text="ItineraryDescription" />

    <TextView
        android:id="@+id/tvItineraryDetailFeatures"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/tvItineraryDetailDescription"
        android:text="Features : San Jose , $ , Food" />
</RelativeLayout>